<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.fleet.common.BindingUtils" />

        <variable
                name="homeViewModel"
                type="com.example.fleet.viewmodels.home.HomeViewModel" />

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/shape_round_corner"
            android:elevation="@dimen/dp_20"
            android:padding="@dimen/dp_5">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_5">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_marginRight="@dimen/dp_10"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:drawableLeft="@drawable/ic_calendar"
                                    android:drawablePadding="@dimen/dp_5"
                                    android:padding="@dimen/dp_3"
                                    android:text="@string/date_colon"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`bold`}" />

                            <TextView
                                    android:id="@+id/tv_date_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:padding="@dimen/dp_5"
                                    android:singleLine="true"
                                    android:text="18:30 27 Feb 2020 "
                                    android:textAllCaps="false"
                                    android:textColor="@color/list_text_color"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`regular`}" />

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/tv_amount"
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:drawableLeft="@drawable/ic_rupee"
                                    android:drawablePadding="@dimen/dp_5"
                                    android:padding="@dimen/dp_3"
                                    android:text="@string/amount"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`bold`}" />

                            <TextView
                                    android:id="@+id/tv_amount_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:padding="@dimen/dp_5"
                                    android:singleLine="true"
                                    android:text="18:30 27 Feb 2020 "
                                    android:textAllCaps="false"
                                    android:textColor="@color/list_text_color"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`regular`}" />

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/tv_invoice"
                                    android:layout_width="@dimen/dp_150"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:drawableLeft="@drawable/ic_rupee"
                                    android:drawablePadding="@dimen/dp_5"
                                    android:padding="@dimen/dp_3"
                                    android:text="@string/vehicle_name"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_14"
                                    app:font="@{`bold`}" />

                            <TextView
                                    android:id="@+id/tv_vehicle_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:padding="@dimen/dp_5"
                                    android:singleLine="true"
                                    android:text="18:30 27 Feb 2020 "
                                    android:textAllCaps="false"
                                    android:textColor="@color/list_text_color"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`regular`}" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
