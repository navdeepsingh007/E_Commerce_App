<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.ecommerce.common.BindingUtils" />

        <variable
            name="cartViewModel"
            type="com.example.ecommerce.viewmodels.orders.OrdersViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include

            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> cartViewModel.clickListener(v)}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_no_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_record_found"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlCoupon"
                android:layout_marginBottom="@dimen/dp_5" />

            <LinearLayout
                android:id="@+id/linLay_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:layout_below="@+id/rv_order"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reason_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:padding="@dimen/dp_3"
                    android:textAllCaps="false"
                    android:layout_weight="9"
                    android:text="@string/other"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`bold`}" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/linLay_other"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/rectangle_grey_stroke"
                android:gravity="top"
                android:textSize="14sp"
                android:hint="Enter other reason"
                android:lines="4"
                android:maxLength="256"
                android:padding="@dimen/dp_16"
                tools:ignore="Autofill,TextFields,UnusedAttribute" />


        </RelativeLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/btn_bg_shape_colored"
                android:elevation="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:text="@string/continues"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
