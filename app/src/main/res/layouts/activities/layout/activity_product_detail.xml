<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_50"
            android:orientation="vertical">

            <include
                android:id="@+id/common_tool_bar"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50" />

            <LinearLayout
                android:id="@+id/llSelectAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5">

                <ImageView
                    android:id="@+id/ivLocationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/tvDeliveryAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="Select Delivery Address"
                    android:textColor="@color/headingColor" />

                <ImageView
                    android:id="@+id/ivDropDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_drop_down" />
            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivProductImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/offersViewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="-15dp"
                        android:background="@drawable/no_image"
                        android:visibility="visible" />

                    <com.example.ecommerce.views.home.viewpager.AutoScrollViewPager
                        android:id="@+id/vpBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="-15dp"
                        android:background="@drawable/no_image"
                        android:tint="#6F000000"
                        android:visibility="gone" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:visibility="gone"
                        app:tabBackground="@drawable/viewpager_tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProductName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Product name"
                                android:textColor="@color/headingColor"
                                android:textSize="@dimen/sp_20"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/ivFavourite"
                                android:layout_width="15dp"
                                android:layout_height="@dimen/dp_40"
                                android:layout_weight="1"
                                android:backgroundTint="@color/colorBlack"
                                android:contentDescription="@string/todo"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:src="@drawable/favourite" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvVendorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginRight="12dp"
                            android:textColor="@color/light_grey"
                            android:text="by company" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RatingBar
                                android:id="@+id/rbProductRating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:theme="@style/RatingBar"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_alignParentEnd="true">

                                <TextView
                                    android:id="@+id/tvVendorNameTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:textColor="@color/light_grey"
                                    android:text="Vendor:" />

                                <TextView
                                    android:id="@+id/tvVendorNameOld"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:layout_marginRight="12dp"
                                    android:textColor="@color/light_grey"
                                    android:text="company" />
                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="$231"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProductOff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$531"
                                android:textColor="@color/colorGrey1" />

                            <TextView
                                android:id="@+id/tvProductPercentageOff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:text="24% off"
                                android:textColor="@color/colorRed"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTitleSelectSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Select Size"
                            android:textColor="@color/headingColor"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvTitleSelectColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Select Color"
                            android:textColor="@color/headingColor"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvTitleSpecification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Specification"
                            android:textColor="@color/headingColor"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:visibility="gone">

                            <TextView
                                android:id="@+id/tvTitleShown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Shown"
                                android:textColor="@color/headingColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvShown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/product_shown"
                                android:textColor="@color/naturalGrey" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:visibility="gone">

                            <TextView
                                android:id="@+id/tvTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Style"
                                android:textColor="@color/headingColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/product_style"
                                android:textColor="@color/naturalGrey" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvProductDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="@string/product_details"
                            android:textColor="@color/naturalGrey"
                            />
                        <TextView
                            android:id="@+id/tv_seller_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/seller_info"
                            android:textColor="@color/headingColor"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/rl_seller"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_seller_pic"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/customer_profile" />

                        <TextView
                            android:id="@+id/tv_seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_seller_pic"
                            android:fontFamily="sans-serif-black"
                            android:layout_centerVertical="true"
                            android:paddingStart="20dp"
                            android:text="James Lawson"
                            android:textColor="@color/headingColor"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />
                        </RelativeLayout>

                        <WebView
                            android:id="@+id/web_view_description"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="WebViewLayout"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGreyLight"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            android:padding="@dimen/dp_10"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etPincode"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_40dp"
                                android:hint="Enter pin code"
                                android:paddingLeft="@dimen/dp_15"
                                android:background="@drawable/rectangle_grey_stroke"
                                android:layout_weight="8" />

                            <Button
                                android:id="@+id/btnPincodeSubmit"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_weight="2"
                                android:elevation="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@drawable/btn_bg_shape_colored_primary"
                                android:text="Apply"
                                android:textAllCaps="false"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                app:font="@{`bold`}" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rlReviewTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvTitleReviewProduct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/review_product"
                                android:textColor="@color/headingColor"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSeeMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/review_see_more"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llOverAllRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/rbOverallRating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:theme="@style/RatingBar"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvAvgRatings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="@string/avg_rating"
                                android:textColor="@color/naturalGrey"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTotalReviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:text="@string/total_review"
                                android:textColor="@color/naturalGrey" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rlProductRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivCustomerPic"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/customer_profile" />


                            <TextView
                                android:id="@+id/tvProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ivCustomerPic"
                                android:fontFamily="sans-serif-black"
                                android:paddingStart="20dp"
                                android:text="James Lawson"
                                android:textColor="@color/headingColor"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                            <RatingBar
                                android:id="@+id/custRating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvProfileName"
                                android:layout_alignStart="@id/tvProfileName"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dimen_20dp"
                                android:layout_weight="1"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.1"
                                android:theme="@style/RatingBar" />

                            <TextView
                                android:id="@+id/tvCustReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ivCustomerPic"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/customer_review"
                                android:textColor="@color/naturalGrey" />

                            <ImageView
                                android:id="@+id/ivReviewedProductPic"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:layout_below="@id/tvCustReview"
                                android:scaleType="fitCenter"
                                android:paddingRight="8dp"
                                android:src="@drawable/user_review_picture" />

                            <TextView
                                android:id="@+id/tvCustReviewDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ivReviewedProductPic"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/review_date"
                                android:textColor="@color/naturalGrey" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvTitleProductSuggestions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ivReviewedProductPic"
                            android:paddingTop="@dimen/dp_10"
                            android:text="@string/product_suggestions"
                            android:textColor="@color/headingColor"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSuggestedProducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/addProductToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/btn_bg_shape_colored_primary"
            android:text="@string/add_to_cart"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:font="@{`bold`}" />

        <LinearLayout
            android:id="@+id/ll_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_round_corner"
            android:elevation="@dimen/dp_10"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/colorBlack"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_black_cross" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="Select Quantity"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:font="@{`bold`}"
                tools:ignore="AllCaps" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_minus_back"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_count_back"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:font="@{`regular`}"
                    tools:ignore="AllCaps" />

                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus_back"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/price_colon"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/price"
                    android:textAllCaps="false"
                    android:textColor="@color/colorSuccess"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_bg_shape_colored"
                android:text="@string/proceed"
                android:textColor="@color/colorWhite"
                android:visibility="visible"
                app:font="@{`bold`}" />
        </LinearLayout>

    </RelativeLayout>
</layout>