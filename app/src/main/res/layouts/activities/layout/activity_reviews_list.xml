<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.ecommerce.common.BindingUtils" />

        <variable
            name="reviewsViewModel"
            type="com.example.ecommerce.viewmodels.ratingreviews.RatingReviewsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:hideKeyBoardOnClick="@{`back`}"
        android:orientation="vertical">

        <include

            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> reviewsViewModel.clickListener(v)}" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_no_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_record_found"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:padding="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnSubmit"
                />
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/btn_bg_shape_colored"
                android:text="@string/submit"
                android:textAlignment="center"
                android:visibility="gone"
                android:onClick="@{(v) -> reviewsViewModel.clickListener(v)}"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:font="@{`bold`}" />

        </RelativeLayout>
    </LinearLayout>
</layout>
