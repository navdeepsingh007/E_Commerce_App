<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlFilterMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_grey_stroke_transparent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/tvFilterOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="@color/neutralDark"
            />

        <TextView
            android:id="@+id/tvFilterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvFilterOption"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            android:textColor="@color/neutralDark"
            />

        <ImageView
            android:id="@+id/ivDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvFilterOption"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</layout>