<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.ecommerce.common.BindingUtils" />

        <variable
            name="loginViewModel"
            type="com.example.ecommerce.viewmodels.LoginViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        app:hideKeyBoardOnClick="@{`back` }">

        <include
            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> loginViewModel.clickListener(v)}" />


        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/hello"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_26"
            android:textStyle="bold"
            app:font="@{`bold`}"
            tools:ignore="AllCaps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/enter_your_moble_number"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            app:font="@{`regular`}"
            tools:ignore="AllCaps" />

        <View
            android:id="@+id/v_underemail"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorPrimary"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:elevation="@dimen/dp_10"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"

            >

            <com.hbb20.CountryCodePicker
                android:id="@+id/btn_ccp"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_editttext_bg"
                android:elevation="@dimen/dp_10"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                app:ccpDialog_showNameCode="false"
                app:ccp_arrowSize="@dimen/dp_20"
                app:ccp_clickable="true"
                app:ccp_contentColor="@color/colorBlack"
                app:ccp_defaultPhoneCode="91"
                app:ccp_showFlag="true"
                app:ccp_showPhoneCode="true"
                app:ccp_textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_editttext_bg"
                android:elevation="@dimen/dp_10"
                android:ellipsize="start"
                android:hint="@string/your_mobile_number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/sp_14"
                app:font="@{`regular`}" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:padding="@dimen/dp_20">


            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg_shape_colored"
                android:drawableRight="@drawable/ic_button_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_arrow_forward"
                android:text="@string/continues"
                android:textColor="@color/colorWhite" />

            <!-- <ImageView
                 android:id="@+id/imgArrow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignRight="@+id/btn_login"
                 android:layout_margin="@dimen/dp_2"
                 android:src="@drawable/ic_button_arrow"
                 android:padding="@dimen/dp_5" />-->
        </RelativeLayout>
    </LinearLayout>

</layout>