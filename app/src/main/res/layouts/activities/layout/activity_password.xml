<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="passViewModel"
                type="com.example.ecommerce.viewmodels.LoginPasswordVModel"/>

    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/cl_mainLayout"
            app:hideKeyBoardOnClick="@{`back`}"
            android:background="@color/colorWhite"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                android:id="@+id/toolbarCommon"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_round_corner"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                tools:ignore="MissingConstraints">

            <TextView
                    android:id="@+id/tv_verifyEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/welcome_back_password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_18"
                    app:font="@{`semibold`}"

            />

            <LinearLayout
                    android:id="@+id/ll_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_35"
                    android:background="@drawable/ic_edit_back"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_password"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:textAllCaps="false"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/hint_size"
                        app:font="@{`regular`}"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:weightSum="10"
                          android:layout_marginTop="@dimen/dp_40"
                          android:layout_height="wrap_content">

                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="8"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tv_forgot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgot_password"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/colorLightBlue"
                            app:font="@{`regular`}"
                            android:onClick="@{(v) -> passViewModel.clickListener(v)}"
                            android:textSize="@dimen/sp_14"/>

                    <TextView
                            android:id="@+id/tv_signup"
                            android:layout_width="match_parent"
                            android:layout_weight="8"
                            android:layout_height="wrap_content"
                            android:text="@string/dont_account"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/colorLightBlue"
                            app:font="@{`regular`}"
                            android:onClick="@{(v) -> passViewModel.clickListener(v)}"
                            android:textSize="@dimen/sp_14"/>

                </LinearLayout>
                <ImageView
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/round_layout"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/ic_arrow_forward"
                        android:onClick="@{(v) -> passViewModel.clickListener(v)}"

                />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>