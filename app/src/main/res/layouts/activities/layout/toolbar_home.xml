    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_toobar"
        android:elevation="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:backgroundTint="@color/colorBlack"
                android:contentDescription="@string/todo"
                android:onClick="@{onClick}"
                android:padding="@dimen/dp_16"
                android:src="@drawable/ic_menu" />

            <EditText
                android:id="@+id/etSearchProducts"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_toRightOf="@+id/toolbar"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:hint="Search product"
                android:textColorHint="@color/colorGrey1"
                android:background="@drawable/rectangle_grey_stroke"
                android:drawableLeft="@drawable/ic_search" />

            <!--android:onClick="@{onClick}"-->
            <ImageView
                android:id="@+id/ivFavourite"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_50"
                android:backgroundTint="@color/colorBlack"
                android:contentDescription="@string/todo"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/favourite" />

            <!--android:onClick="@{onClick}"-->
            <ImageView
                android:id="@+id/ivAlert"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_50"
                android:backgroundTint="@color/colorBlack"
                android:contentDescription="@string/todo"
                android:padding="@dimen/dp_10"
                android:src="@drawable/notification" />

